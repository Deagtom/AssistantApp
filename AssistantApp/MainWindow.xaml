<Window x:Class="AssistantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:AssistantApp.Converters"
        Title="Symptom Assistant" Height="700" Width="1100" WindowStartupLocation="CenterScreen" Background="{DynamicResource WindowBackground}">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF4F6FA" Offset="0"/>
            <GradientStop Color="#FFE3E8F0" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="SidebarBackground" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFFFF"/>
        <Color x:Key="AccentColor">#FF5C6BC0</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FF333333"/>
        <conv:SymptomSelectionMultiConverter x:Key="SymptomSelectionMultiConverter"/>
        <conv:LocalizationMultiConverter x:Key="LocalizationMultiConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="{StaticResource SidebarBackground}" Grid.Column="0" Margin="10">
            <TextBlock Text="Меню" FontSize="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Диагностика" Click="NavButton_Click" Tag="0" Margin="0,4"/>
            <Button Content="История" Click="NavButton_Click" Tag="1" Margin="0,4"/>
            <Button Content="Административная панель" Click="NavButton_Click" Tag="2" Margin="0,4"/>
            <Button Content="Настройки" Click="NavButton_Click" Tag="3" Margin="0,4"/>
        </StackPanel>

        <TabControl x:Name="MainTabControl" Grid.Column="1">
            <TabItem>
                <ScrollViewer>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Диагностика" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
                        <Grid Grid.Row="1" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{StaticResource PanelBackground}" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <RadioButton Content="Выбор из списка" GroupName="InputMode" IsChecked="{Binding IsListMode, Mode=TwoWay}"/>
                                        <RadioButton Content="Свободный ввод" GroupName="InputMode" Margin="10,0,0,0" IsChecked="{Binding IsTextMode, Mode=TwoWay}"/>
                                    </StackPanel>
                                    <TextBlock Text="Выберите симптомы" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                                    <TreeView ItemsSource="{Binding Categories}" Margin="0,10,0,0" IsEnabled="{Binding IsListMode}">
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate ItemsSource="{Binding Symptoms}">
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource LocalizationMultiConverter}">
                                                            <Binding Path="Name"/>
                                                            <Binding Path="DataContext.SelectedLanguage" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <HierarchicalDataTemplate.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Command="{Binding DataContext.ToggleSymptomCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                  CommandParameter="{Binding}">
                                                            <TextBlock>
                                                                <TextBlock.Text>
                                                                    <MultiBinding Converter="{StaticResource LocalizationMultiConverter}">
                                                                        <Binding Path="Name"/>
                                                                        <Binding Path="DataContext.SelectedLanguage" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <CheckBox.IsChecked>
                                                                <MultiBinding Mode="OneWay" Converter="{StaticResource SymptomSelectionMultiConverter}">
                                                                    <Binding Path="DataContext.SelectedSymptoms" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                    <Binding/>
                                                                </MultiBinding>
                                                            </CheckBox.IsChecked>
                                                        </CheckBox>
                                                    </DataTemplate>
                                                </HierarchicalDataTemplate.ItemTemplate>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <TextBlock Text="Интенсивность боли:" VerticalAlignment="Center"/>
                                        <Slider Minimum="0" Maximum="10" Value="5" Width="150" Margin="10,0,0,0" IsEnabled="{Binding IsListMode}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,10,0,0" IsEnabled="{Binding IsTextMode}">
                                        <TextBlock Text="Свободный ввод жалоб" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                                        <TextBox Height="60" TextWrapping="Wrap" Margin="0,6,0,0" Text="{Binding ComplaintText, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <Button Content="Предсказать" Margin="0,20,0,0" Command="{Binding PredictCommand}"/>
                                </StackPanel>
                            </Border>
                            <Border Background="{StaticResource PanelBackground}" CornerRadius="8" Padding="12" Margin="20,0,0,0" Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Результаты" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                                    <ComboBox ItemsSource="{Binding Diagnoses}" SelectedItem="{Binding SelectedDiagnosis}" Margin="0,10,0,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource LocalizationMultiConverter}">
                                                            <Binding Path="Name"/>
                                                            <Binding Path="DataContext.SelectedLanguage" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock Text="{Binding SelectedDiagnosis.Description}" TextWrapping="Wrap" Margin="0,10,0,0"/>
                                    <Button Content="Сохранить" Margin="0,20,0,0" Command="{Binding SaveUsageCommand}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="История обращений" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
                        <DataGrid AutoGenerateColumns="False" Margin="0,20,0,0" ItemsSource="{Binding UsageRecords}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" Binding="{Binding EventTime}"/>
                                <DataGridTextColumn Header="Симптомы" Binding="{Binding Symptoms}"/>
                                <DataGridTextColumn Header="Результат" Binding="{Binding ResultName}"/>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="PDF" Command="{Binding ExportCommand}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Административная панель" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
                        <Button Content="Загрузить симптомы и диагнозы" Command="{Binding LoadDataCommand}" Margin="0,20,0,0"/>
                        <Button Content="Обучить модель" Command="{Binding TrainModelCommand}" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Настройки" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Язык" Margin="0,20,0,0"/>
                        <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}" Width="120"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
